<%= form_with(model: [@room, question], 
              id: dom_id(question),
              target: :_top) do |form| %>
  <%= render partial: 'shared/form_errors', locals: { object: question } %>
  <div class="w-full px-1">
    <%= form.text_field :title, class: "w-full" %>
  </div>
  <div>
    <%= form.submit class: "py-3 px-2 font-medium text-blue-100 uppercase bg-blue-400 rounded-xl hover:bg-blue-500 transition duration-300 ease-in-out" %>
  </div>
<% end %>
