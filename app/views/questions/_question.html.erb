<%= turbo_frame_tag dom_id(question), class: "", "data-empty-state-target": "item" do %>
  <div class="flex flex-row items-center justify-start w-full space-x-2 rounded-full border border-gray-300 pl-4 my-3">
    <div class="h-14 w-14">
      <% if question.anonymous %>
        <div class="font-bold text-gray-200 rounded-full bg-sky-400 flex items-center justify-center font-mono w-10 h-10">
          An
        </div>
      <% else %>
        <div class="font-bold text-gray-200 rounded-full bg-<%= random_background %>-400 flex items-center justify-center font-mono w-10 h-10">
          <%= initial(question.user.profile.nickname) %>
        </div>
      <% end %>
    </div>
    <div>
      <div class="font-bold text-sm"><%= question.user.profile.nickname %></div>
      <%= question.title %>
    </div>
  </div>
<% end %>
