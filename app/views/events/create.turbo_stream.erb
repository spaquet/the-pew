<%# app/views/events/create.turbo_stream.erb %>
<% if @event.errors.any? %>
  <%# render_turbo_stream_flash_messages %>
  <%= turbo_stream.replace("new_event",
                            partial: "events/form",
                            locals: { event: @event }) %>
<% else %>
  <%= turbo_stream.replace("new_event",
                            partial: "events/form",
                            locals: { event: Event.new }) %>
  <%= turbo_stream.prepend( :events, 
                          target: "events", 
                          partial: "events/event",
                          locals: { event: @event }) %>
<% end %>
